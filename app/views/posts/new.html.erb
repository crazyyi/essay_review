<div class="row">
  <div class="span6 offset3">
    <h1>Compose a new essay</h1>
    <%= form_for(@post, :remote => true) do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %> <br />

    <%= f.label :content %>
    <%= f.text_area :content %> <br />

    <%= f.submit "Create Post", class:"btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
